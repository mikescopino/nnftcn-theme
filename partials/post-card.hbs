<article class="post-card {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
  {{#if feature_image}}
    <a class="post-card-image-link" href="{{url}}" title="View this blog post">
      <div class="post-card-image" style="background-image: url({{feature_image}})"></div>
    </a>
  {{/if}}
  <div class="post-card-content">
    <header class="post-card-header">
      {{#if primary_tag}}
        <span class="post-card-tags">{{primary_tag.name}}</span>
      {{/if}}
      <h2 class="xs post-card-title"><a href="{{url}}" title="View this blog post">{{title}}</a></h2>
    </header>
    <section class="post-card-excerpt">
      <p class="sm">{{excerpt words="33"}}&hellip;</p>
    </section>
    <footer class="post-card-meta">
      <p class="xs post-card-author">{{date}}</p>
    </footer>
  </div>
</article>
