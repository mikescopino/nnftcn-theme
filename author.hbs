{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{#author}}

<header class="header center">
  <div class="container">
    <img class="post-author-img" src="{{profile_image}}" alt="{{name}}" />
    <h1 class="lg headline">#{{name}}</h1>
    {{#if description}}
      <p>{{description}}</p>
    {{else}}
      <p>Showing {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}} from this author</p>
    {{/if}}
  </div>
</header>

{{/author}}

<main id="site-main" class="site-main outer" role="main">
  <div class="container">
    <div class="post-feed">
      {{#foreach posts}}
        {{> "post-card"}}
      {{/foreach}}
    </div>
  </div>
</main>
